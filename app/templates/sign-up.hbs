<div class="container">
  <form {{action 'create' on='submit'}} class="form-signin" role="form">

    <h2 class="form-signin-heading">Sign up</h2>
    {{input value=email placeholder="Email address" class="form-control" }}

    {{input value=password class="form-control" placeholder="Password"}}
    {{input value=passwordConfirmation class="form-control" placeholder="Password confirmation"}}
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
  </form>

</div> <!-- /container -->
