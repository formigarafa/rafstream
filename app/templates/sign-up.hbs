{{#if errors.any }}
  <div class="alert alert-danger" role="alert">
    <button type="button" class="close" {{action 'clearErrors'}}>
      <span aria-hidden="true">&times;</span>
      <span class="sr-only">Close</span>
    </button>
    <div class="container">
      <h3>Ooops! Something feels wrong here... could you please check? </h3>
      <ul>
        {{#each errors}}
            <li>
              {{this}}
            </li>
        {{/each}}
      </ul>
    </div>
  </div>
{{/if}}

<div class="container">
  <form {{action 'create' on='submit'}} class="form-signin" role="form">

    <h2 class="form-signin-heading">Sign up</h2>
    {{input value=email placeholder="Email address" class="form-control" }}

    {{input value=password type="password" class="form-control" placeholder="Password"}}
    {{input value=passwordConfirmation type="password" class="form-control" placeholder="Password confirmation"}}
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
  </form>

</div> <!-- /container -->
